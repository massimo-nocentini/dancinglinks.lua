{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "DLX - update CWEB files",
			"type": "shell",
			"linux": {
				"command": "rm -f dlx1.w && wget https://cs.stanford.edu/~knuth/programs/dlx1.w"
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/src/dlx1"
			}
		},
		{
			"label": "DLX - generate C sources && compile",
			"type": "shell",
			"linux": {
				"command": [
					"ctangle dlx1.w &&",
					"gcc -O3 -std=c17 -I/usr/local/sgb/include/ -Wall dlx1.c -o dlx1 -lgb"
				]
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/src/dlx1"
			}
		},
		{
			"label": "DLX - generate TeX sources && compile",
			"type": "shell",
			"linux": {
				"command": "rm -f dlx1.idx dlx1.log dlx1.pdf dlx1.scn dlx1.toc && cweave dlx1.w && pdftex dlx1.tex"
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/src/dlx1"
			}
		},
		{
			"label": "DLX - compile shared library",
			"type": "shell",
			"linux": {
				"command": [
					"gcc -O3 -std=c17 -fPIC -Wall -shared -I/usr/local/sgb/include -o libdlx1.so libdlx1.c -lgb"
				]
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/src/dlx1"
			}
		},
		{
			"label": "DLX - compile executable",
			"type": "shell",
			"linux": {
				"command": [
					"gcc -O3 -Wall -o dlx dlx.c  -ldlx1"
				]
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/src/dlx1"
			}
		},
		{
			"label": "DLX - install .h, .so and dlx",
			"type": "shell",
			"linux": {
				"command": [
					"sudo cp dlx1.h /usr/local/include && sudo cp libdlx1.so /usr/local/lib"
				]
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/src/dlx1"
			}
		},
		{
			"label": "DLX - deploy",
			"group": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"DLX - compile shared library",
				"DLX - compile executable",
				"DLX - install .h, .so and dlx"
			]
		},
		{
			"label": "DLX - update CWEB file: queens-dlx.w",
			"type": "shell",
			"linux": {
				"command": [
					"rm -f queens-dlx.w && wget https://cs.stanford.edu/~knuth/programs/queens-dlx.w &&",
					"ctangle queens-dlx.w &&",
					"cweave queens-dlx.w"
				]
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/test/queens"
			}
		},
		{
			"label": "DLX - queens-dlx - compile bin and pdf",
			"type": "shell",
			"linux": {
				"command": [
					"gcc -O3 queens-dlx.c -o queens-dlx &&",
					"pdftex queens-dlx.tex"
				]
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/test/queens"
			}
		},
		{
			"label": "DLX - queens-dlx - data for 8x8 square",
			"type": "shell",
			"linux": {
				"command": [
					"./queens-dlx 8 > data_8x8.txt"
				]
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/test/queens"
			}
		},
	]
}