{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "DLX - update CWEB files",
			"type": "shell",
			"linux": {
				"command": "rm dlx1.w && wget https://cs.stanford.edu/~knuth/programs/dlx1.w"
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/src/dlx1"
			}
		},
		{
			"label": "DLX - generate C sources && compile",
			"type": "shell",
			"linux": {
				"command": "ctangle dlx1.w && gcc -O3 -std=c17 -I/usr/local/sgb/include/ -Wall dlx1.c -o dlx1 -lgb"
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/src/dlx1"
			}
		},
		{
			"label": "DLX - generate TeX sources && compile",
			"type": "shell",
			"linux": {
				"command": "rm dlx1.idx dlx1.log dlx1.pdf dlx1.scn dlx1.toc && cweave dlx1.w && pdftex dlx1.tex"
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "knuth/src/dlx1"
			}
		},
	]
}